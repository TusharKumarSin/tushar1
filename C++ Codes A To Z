1. Decimal To binary conversion code in C++:-

#include <bits/stdc++.h>
using namespace std;

int main()
{
    int a;
    cout<<"Enter the number= ";
    cin>>a;
    int n=a;
    int i=0;
    int ans=0;
    while(n!=0){
        int bit=n&1;
        ans=(bit*pow(10,i))+ans;
        n=n>>1;
        i++;
    }
    cout<<"Bits representation of number "<<a<<" is "<<ans<<endl;

    return 0;
}
source Youtube video:- https://www.youtube.com/watch?v=bWrsk0QizEk&list=PLDzeHZWIZsTryvtXdMr6rPh4IDexB5NIA&index=6

## Other way to produce same output is 


#include <bits/stdc++.h>
using namespace std;

int main()
{
    int a;
    cout<<"Enter the number= ";
    cin>>a;
    int n=a;
    int i=0;
    int ans=0;
    while(n!=0){
        int bit=n&1;
        ans=(bit*pow(10,i))+ans;
        n=n/2;
        i++;
    }
    cout<<"Bits representation of number "<<a<<" is "<<ans<<endl;

    return 0;
}

# Other way to convert the decimal number into binary form is 
#include<bits/stdc++.h>
using namespace std;

int main(){
    cout<<"Enter the number you want to convert into binary form= ";
    int number;
    cin>>number;
    bitset<8>a(number);
    cout<<"The binary form of inputed number "<<number<<" is :"<<a;
    return 0;
}


# Binar to decimal conversion code

#include<bits/stdc++.h>
using namespace std;

int main(){
    int bit;
    cout<<"Enter the binary form:";
    cin>>bit;
    int bits=bit;
    int i=0;
    int ans=0;
    while(bits!=0){
        int digit=bits%10;
        if(digit==1){
            ans=ans+pow(2,i);
        }
        bits=bits/10;
        i++;
    }
    cout<<"The decimal form of binary "<<bit<<" is:"<<ans;
    return 0;
}


## Numbers of notes calculation using switch statement , The code is 

#include<bits/stdc++.h>
using namespace std;

int main(){
    int amount,remaing;
    cout<<"Enter the amount you want to withdraw=";
    cin>>amount;
    int note100,note50,note20,note1;
    remaing=amount;
    switch(1){
        case 1:
        note100=remaing/100;
        remaing=remaing%100;
        cout<<"Numbers of 100 rupees Notes is="<<note100<<endl;
        case 2:
        note50:
        note50=remaing/50;
        remaing=remaing%50;
        cout<<"Numbers of 50 rupees Notes is="<<note50<<endl;
        case 3:
        note20=remaing/20;
        remaing=remaing%20;
        cout<<"Numbers of 20 rupees Notes is="<<note20<<endl;
        case 4:
        note1=remaing;
        cout<<"Numbers of 1 rupees Notes is="<<note1<<endl;
        break;
        default:
        cout<<"Invalid entry Please correct Entered Amount!"<<endl;  
        }
        return 0;
}

###
442. Find All Duplicates in an Array

class Solution {
public:
    vector<int> findDuplicates(vector<int>& nums) {
        vector<int>result;
        for(int i=0;i<nums.size();i++){
            int num=abs(nums[i]);
            int index=num-1;
            if(nums[index]<0){
                result.push_back(num);
            }else{
                nums[index]*=-1;
            }
        }
        return result;
        
    }
};

## 3Sum coding problem

#include <bits/stdc++.h>
vector<vector<int>> findTriplets(vector<int>arr, int n, int K) {
	vector<vector<int>>ans;
	sort(arr.begin(),arr.end());
	if(n<3){
		return {};
	}
	for(int i=0;i<n;i++){
		if(i!=0&&arr[i]==arr[i-1]){
			continue;
		}
		int j=i+1;
		int k=n-1;
		while(j<k){
			if(arr[i]+arr[j]+arr[k]>K){
				k--;
			}else if(arr[i]+arr[j]+arr[k]<K){
				j++;
			}else{
				ans.push_back({arr[i],arr[j],arr[k]});
				j++;
				k--;
				while(j<k&&arr[j]==arr[j-1]){
					j++;
				}
				while(j<k&&arr[k]==arr[k+1]){
					k--;
				}
			}
		}
	}
	return ans;
}
