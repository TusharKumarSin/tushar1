1. Decimal To binary conversion code in C++:-

#include <bits/stdc++.h>
using namespace std;

int main()
{
    int a;
    cout<<"Enter the number= ";
    cin>>a;
    int n=a;
    int i=0;
    int ans=0;
    while(n!=0){
        int bit=n&1;
        ans=(bit*pow(10,i))+ans;
        n=n>>1;
        i++;
    }
    cout<<"Bits representation of number "<<a<<" is "<<ans<<endl;

    return 0;
}
source Youtube video:- https://www.youtube.com/watch?v=bWrsk0QizEk&list=PLDzeHZWIZsTryvtXdMr6rPh4IDexB5NIA&index=6

## Other way to produce same output is 


#include <bits/stdc++.h>
using namespace std;

int main()
{
    int a;
    cout<<"Enter the number= ";
    cin>>a;
    int n=a;
    int i=0;
    int ans=0;
    while(n!=0){
        int bit=n&1;
        ans=(bit*pow(10,i))+ans;
        n=n/2;
        i++;
    }
    cout<<"Bits representation of number "<<a<<" is "<<ans<<endl;

    return 0;
}
# Binar to decimal conversion code

#include<bits/stdc++.h>
using namespace std;

int main(){
    int bit;
    cout<<"Enter the binary form:";
    cin>>bit;
    int bits=bit;
    int i=0;
    int ans=0;
    while(bits!=0){
        int digit=bits%10;
        if(digit==1){
            ans=ans+pow(2,i);
        }
        bits=bits/10;
        i++;
    }
    cout<<"The decimal form of binary "<<bit<<" is:"<<ans;
    return 0;
}
